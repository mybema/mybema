<section class='dashboard-container full-height'>
  <div class='discussion-editor'>
    <% if @section.errors.any? %>
      <% @section.errors.full_messages.each do |message| %>
        <span class='single-error'>
          <%= message %>
        </span>
      <% end %>
    <% end %>

    <%= form_for @section, url: admin_section_path do |f| %>
      <div class='discussion-form--title'>
        <%= f.label :title, 'Title:', class: 'discussion-form--label' %>
        <%= f.text_field :title, class: 'discussion-form--input' %>
      </div>

      <div class='btn-group'>
        <%= f.submit "update section", class: "admin-btn green-btn" %>
        <%= link_to 'delete section', admin_section_path,
            class: 'admin-btn red-btn', method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= link_to 'Cancel and return to discussions', admin_sections_path, class: 'discussion-form--cancel' %>
  </div>
</section>